@{
    ViewBag.Title = "Home Page";
}

<div style="padding-top: 120px">
    <div class="row">
        <form class="form-horizontal" action="~/Home/SearchResult">
            <div class="col-md-6 col-md-offset-3" align="center">
                <h1>Indonesian <span style="color: #57BF98;">Research Citation Index</span></h1>
                <br>
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input name="searchTxt" type="text" class="form-control input-lg" style="border-radius: 0" />
                        <span class="input-group-btn">
                            <button class="btn btn-lg" type="submit" style="border-radius: 0;background-color: #57BF98; color: white; line-height:1.1;">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                    </div>
                </div><br>
                <div class="form-group">
                    <label class="radio-inline">
                        <input type="radio" id="inlineRadio1" name="searchRB" value="0" checked="true"> all
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="inlineRadio2" name="searchRB" value="1"> name
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="inlineRadio3" name="searchRB" value="2"> title
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>